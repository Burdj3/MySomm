<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#722F37"
    tools:context=".ProfileSetUp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="-40dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="data.json"
        app:lottie_loop="true" />

    <Button
        android:id="@+id/lognbtn"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2A0010"
        android:text="Sign Up"
        android:textSize="25dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/singupbtn"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lognbtn"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#2A0010"
        android:text="Login"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lognbtn" />

    <Button
        android:id="@+id/guestLogin"
        android:layout_width="226dp"
        android:layout_height="58dp"
        android:layout_below="@+id/singupbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="92dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#2A0010"
        android:text="Guest Login"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
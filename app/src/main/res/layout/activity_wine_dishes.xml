<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WineDishes"
    android:background="@color/wine">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/chickenButton"
        android:backgroundTint="@color/black"
        android:layout_marginRight="10dp"
        android:text="Chicken"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/black"
        android:id="@+id/beefButton"
        android:layout_toRightOf="@+id/chickenButton"
        android:text="Beef"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/black"
        android:id="@+id/fishButton"
        android:layout_toLeftOf="@+id/chickenButton"
        android:layout_marginRight="10dp"
        android:text="Fish"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/black"
        android:id="@+id/turkeyButton"
        android:layout_below="@+id/chickenButton"
        android:text="Turkey"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/black"
        android:id="@+id/desertButton"
        android:layout_above="@+id/chickenButton"
        android:text="Dessert"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/wine">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wineDishButton"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Wine Dish Recommendations"
        android:textFontWeight="b"
        android:backgroundTint="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:id="@+id/wineCollectionButton"
        android:layout_below="@+id/wineDishButton"
        android:layout_centerHorizontal="true"
        android:text="Wine Collection"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wineSurveyButton"
        android:layout_below="@+id/wineCollectionButton"
        android:layout_centerHorizontal="true"
        android:text="Wine Survey"
        android:backgroundTint="@color/black"/>


</RelativeLayout>